<div class="container">
<h1>New Article</h1>


<div class="col-md-6 col-md-offset-3">
<%= form_for @article do |f| %>

	<div class="form-group field">

	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>

	</div>

	<div class="form-group field">
	<%= f.label :description %>
	<%= f.hidden_field :description, class: "form-control", rows: "5" %>
	</div>

	<div class="form-group">
		<%= f.trix_editor :description %>
	</div>

	<%= f.submit "Create article", class: "btn btn-primary"  %>

<% end %>
</div>

</div>
 <style>
 	.btn{
 		color: #175d0a;
 	}
 </style>